<div class="text-center">
    @model Dish
    <h1 class="display-3">Add a new Dish!</h1>
    <form method="post" class="newDish" asp-action="AddDish" controller="Home">
        <span class="error" asp-validation-for="chef"></span>
        <label for="Chef">Chef's Name</label>
        <select class="form-control" name="chef_id_for_dish">
            @foreach(var chef in ViewBag.Chefs){
                <option value=@chef.user_id>@chef.first_name @chef.last_name</option>
            }
        </select>
        <span class="error" asp-validation-for="name"></span>
        <label for="Name">Name of Dish</label>
        <input type="text" name="name" class="form-control">
        <span class="error" asp-validation-for="calories"></span>
        <label for="Calories"># of Calories</label>
        <input class="form-control" type="text" name="Calories">
        <span class="error" asp-validation-for="tastiness"></span>
        <label for="Tastiness">Tastiness</label>
        <select class="form-control" name="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span class="error" asp-validation-for="description"></span>
        <label for="Description">Description</label>
        <textarea class="form-control" name="Description" ></textarea><hr>
        <button class="btn btn-primary">Add Dish</button>
    </form>
</div>